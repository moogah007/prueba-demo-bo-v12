<odoo>

    <record model="ir.ui.view" id="view_sale_order_line_agent_tree">
        <field name="name">sale.order.line.agent.tree</field>
        <field name="model">sale.order.line.agent</field>
        <field name="inherit_id" ref="sale_commission.view_sale_order_line_tree"/>
        <field name="arch" type="xml">
            <field name="commission" position="after">
                <field name="commission_type" invisible="1"/>
                <field name="commission_percentage" attrs="{'invisible': [('commission_type', '!=', 'fixed')]}"/>
            </field>
        </field>
    </record>

</odoo>

