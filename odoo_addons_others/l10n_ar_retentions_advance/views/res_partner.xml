<odoo>

    <data>

        <record model="ir.ui.view" id="view_partner_form_inh_retention_adv">
            <field name="name">view.partner.form.inh.retention.adv</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Retenciones" groups="account.group_account_invoice"
                          attrs="{'invisible': ['|',('supplier', '=', False), ('parent_id', '!=', False)]}">
                        <field name="retention_partner_rule_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="partner_id" invisible="1"/>
                                <field name="retention_id" domain="[('type_tax_use', '=', 'purchase')]"/>
                                <field name="type"/>
                                <field name="state_id"/>
                                <field name="activity_id" attrs="{'required': [('type','=','profit')],
                                                                  'invisible': [('type','!=','profit')]}"/>
                                <field name="percentage"/>
                                <field name="company_id" invisible="1"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </field>
        </record>

    </data>

</odoo>

