<odoo>

    <data>

        <!-- FORM VIEW -->
        <record model="ir.ui.view" id="perception_arba_form">
            <field name="name">perception.arba.form</field>
            <field name="model">perception.arba</field>
            <field name="arch" type="xml">
                <form string="ARBA Percepciones">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="activity"/>
                            <field name="fortnight"/>
                            <field name="lot"/>
                            <field name="file" filename="filename"/>
                            <field name="filename" invisible="True"/>
                            <button name="generate_file"
                                    type="object"
                                    string="Generar"
                                    icon="fa-gear"
                                    colspan="1"
                            />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- TREE VIEW -->
        <record model="ir.ui.view" id="perception_arba_tree">
            <field name="name">perception.arba.tree</field>
            <field name="model">perception.arba</field>
            <field name="arch" type="xml">
                <tree string="ARBA Percepciones">
                    <field name="name"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="activity"/>
                    <field name="fortnight"/>
                    <field name="lot"/>
                    <field name="file" filename="filename"/>
                    <field name="filename" invisible="True"/>
                </tree>
            </field>
        </record>

        <!-- ACTION -->
        <record model="ir.actions.act_window" id="perception_arba_action">
            <field name="name">ARBA Percepciones</field>
            <field name="res_model">perception.arba</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- MENU -->
        <menuitem id="perception_arba_menu_view" name="ARBA Percepciones"
                  parent="account.menu_finance_reports" action="perception_arba_action" sequence="100"/>

    </data>

</odoo>

