<odoo>

    <record model="ir.ui.view" id="pos_ar_cai_form">
        <field name="name">pos.ar.cai.form</field>
        <field name="model">pos.ar</field>
        <field name="inherit_id" ref="l10n_ar_point_of_sale.pos_ar_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='document_book_ids']/tree/field[@name='name']" position="after">
                <field name="requires_cai" invisible="1"/>
                <field name="cai" attrs="{'invisible': [('requires_cai', '=', False)], 'required': [('requires_cai', '!=', False)]}"/>
                <field name="cai_due_date" attrs="{'invisible': [('requires_cai', '=', False)], 'required': [('requires_cai', '!=', False)]}"/>
                <field name="cai_max_number" attrs="{'invisible': [('requires_cai', '=', False)], 'required': [('requires_cai', '!=', False)]}"/>
            </xpath>
        </field>
    </record>

</odoo>

