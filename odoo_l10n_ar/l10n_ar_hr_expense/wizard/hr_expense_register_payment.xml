<odoo>

    <data>

        <record id="hr_expense_sheet_register_payment_view_form" model="ir.ui.view">
            <field name="name">hr_expense_sheet_register_payment_view_form</field>
            <field name="model">hr.expense.sheet.register.payment.wizard</field>
            <field name="inherit_id" ref="hr_expense.hr_expense_sheet_register_payment_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//footer//button[@name='expense_post_payment']" position="replace">
                    <button string='Validar' name="expense_post_l10n_ar_payment" type="object" class="btn-primary"/>
                </xpath>
                <xpath expr="//form" position="inside">
                    <notebook>
                        <page string="Lineas de pago">
                            <field name="payment_type_line_ids" widget="one2many">
                                <tree editable="bottom">
                                    <field name="account_payment_type_id"
                                           widget="selection" domain="[('currency_id','=', parent.currency_id)]"/>
                                    <field name="amount" sum='Total'/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>

    </data>

</odoo>

