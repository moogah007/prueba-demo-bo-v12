<odoo>
    <data>

        <record model="ir.ui.view" id="wsfe_configuration_form">
            <field name="name">Wsfe configuration form</field>
            <field name="model">wsfe.configuration</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h1><field name="name" placeholder="Nombre..."/></h1>
                        <group>
                            <group>
                                <field name="company_id" groups="base.group_multi_company"/>
                                <field name="type"/>
                                <field name="wsaa_configuration_id"/>
                                <field name="wsaa_token_id" domain="[('wsaa_configuration_id', '=', wsaa_configuration_id)]"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="wsfe_configuration_tree">
            <field name="name">Wsfe configuration tree</field>
            <field name="model">wsfe.configuration</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="type"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="wsaa_configuration_id"/>
                    <field name="wsaa_token_id"/>
                </tree>
            </field>
        </record>

        <record id="action_wsfe_configuration_view" model="ir.actions.act_window">
            <field name="name">Configuracion WSFE</field>
            <field name="res_model">wsfe.configuration</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            id="wsfe_configuration_menu"
            name="Configuracion WSFE"
            action="action_wsfe_configuration_view"
            parent="l10n_ar_afip_tables.afip_configuration_menu"
        />

    </data>
</odoo>

